{
  "name": "solophp/logger",
  "type": "library",
  "description": "PSR-3 compatible logger implementation",
  "keywords": ["php","logger","psr-3"],
  "license": "MIT",
  "authors": [
    {
      "name": "Vitaliy Olos",
      "email": "vedastudio@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Solo\\Logger\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Solo\\Logger\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": ">=8.1",
    "psr/log": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "scripts": {
    "test": "phpunit",
    "test-coverage": "phpunit --coverage-html coverage",
    "cs": "phpcs --standard=PSR12 src/ tests/",
    "cs-fix": "phpcbf --standard=PSR12 src/ tests/"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
